    "version": "0.2.0",
    "configurations": [
        {
            "name": "Meta debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "configs/base_config.yaml",
                "configs/meta_config.yaml"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "SAC cartpole debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "pythonArgs": [
                "-Xdev",
                "-Xfrozen_modules=off"
            ],
            "args": [
                "SAC",
                "cartpole"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "PPO toy debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "pythonArgs": [
                "-Xdev",
                "-Xfrozen_modules=off"
            ],
            "args": [
                "PPO",
                "toy"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "SAC toy debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "pythonArgs": [
                "-Xdev",
                "-Xfrozen_modules=off"
            ],
            "args": [
                "SAC",
                "toy"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
